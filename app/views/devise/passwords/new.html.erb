<div id="devise-auth-form" class="small-12 medium-6 large-5 medium-centered large-centered columns">
  <div class="panel">

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
        <div class="row">
          <div class="small-12 medium-12 large-12 columns">

            <h3>Forgot your password?</h3>
            <p>We'll send password reset instructions.</p>
            <%= devise_error_messages! %>

          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.label :email %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.submit 'Reset Password', :class => 'button' %>
          </div>
        </div>

    <% end %>

  </div><!-- end .panel -->
</div><!-- end #devise-auth-form -->